@model BookShop.Models.BookModel
@{
    ViewData["Title"] = "Book Details  "+Model.Name;
}

<div class="container">
    <div class="row">
        <h3 class="display-4">Book Details:</h3>
        <div class="col-md-6">
            @*<img src="@Model.CoverImageUrl" alt="..." class="img-thumbnail" width="500" height="600">*@
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">

                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="@(i==0 ? "active" : "") "></li>
                    }

                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0 ? "item active" : "item") ">
                            <img class="d-block w-100" src="@Model.Gallery[i].URL" alt="@Model.Gallery[i].Name">
                        </div>
                    }

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span> By</span>
                    <span > @Model.Author</span>
                </div>

            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category - </span> @Model.Category</li>
                <li class="list-group-item"><span class="font-weight-bold">Total pages - </span> @Model.TotalPage</li>
                <li class="list-group-item"><span class="font-weight-bold">Language - </span> @Model.LanguageName</li>
                <li class="list-group-item"><span class="font-weight-bold">Price - </span> @Model.Price</li>
            </ul>

                <div class="btn-group">
                    <a href="~/Book/DeleteBookById?id=@Model.Id" id="deleteBtn" class="btn bg-danger mr-1" onclick="return confirm('Are you sure you want to delete?');"><i class="fas fa-trash-alt text-white"></i>Delete Book</a>
                </div>

                <div class="btn-group">
                    <a asp-controller="Book" asp-action="UpdateBookById" asp-route-Id="@Model.Id" class="btn btn-sm btn-outline-secondary">Update Book</a>
                </div>

                <div class="btn-group">
                    <iframe src="@Model.BookPdfUrl" style="width: 100%;height: 100%;border: none;"></iframe>
                </div>

                

        </div>
    </div>
</div>
</div>