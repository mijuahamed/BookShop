@using BookShop.Models
@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "All Books";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllBooks</title>
</head>
<body>
   
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <h1>All Books:</h1>
                @foreach(var book in Model){

                
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg height="200" width="300" xmlns="http://www.w3.org/2000/svg"><image width="200" height="150" href="pulpitrock.jpg" />Sorry, your browser does not support inline SVG.</svg>

                        <div class="card-body">
                            <h3> @book.Name</h3>
                            <p class="card-text"> @book.Title</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                        <a href="/book/GetBookDetailsById/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
                }


            </div>
        </div>
    </div>


    
</body>
</html>
