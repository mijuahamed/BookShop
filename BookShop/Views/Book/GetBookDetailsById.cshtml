@model BookShop.Models.BookModel
@{
    ViewData["Title"] = "Book Details  "+Model.Name;
}

<div class="container">
    <div class="row">
        <h3 class="display-4">Book Details:</h3>
        <div class="col-md-6">


            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="/images/demo.png" alt="Los Angeles" style="width:100%;height:100%">
                    </div>
                    <div class="item">
                        <img src="/images/bangla.jpg" alt="Chicago" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="/images/C.jpg" alt="New york" style="width:100%;">
                    </div>
                    <div class="item">
                        <img src="/images/english.webp" alt="New york" style="width:100%;">
                    </div>
                    <div class="item">
                        <img src="/images/java.jpg" alt="New york" style="width:100%;">
                    </div>
                    <div class="item">
                        <img src="/images/python.jpg" alt="New york" style="width:100%;">
                    </div>
                    
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>


            
        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span> By</span>
                    <span > @Model.Author</span>
                </div>

            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category - </span> @Model.Category</li>
                <li class="list-group-item"><span class="font-weight-bold">Total pages - </span> @Model.TotalPage</li>
                <li class="list-group-item"><span class="font-weight-bold">Language - </span> @Model.Language</li>
                <li class="list-group-item"><span class="font-weight-bold">Price - </span> @Model.Price</li>
            </ul>
                <div class="row">
                    <div class="col-md-4">
                        <a class="btn btn-outline-primary">
                            Read now
                        </a>
                    </div>
                </div>

        </div>
    </div>
</div>
</div>